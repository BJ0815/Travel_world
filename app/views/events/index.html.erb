<section class="index bg-img d-flex align-items-center">
  <div class="container">
    <div class="index-box">
      <div class="row">
        <div class="col-md-8">
          <div class="head-desicription">
           <h3 class="display-1">Travel</h3>
            <p>Get the latest best practices and research on how to build your business on the world’s largest travel site.</p>
          </div>
        </div>
        <div class="col-md-4">
          <%= form_for '#' do |f| %>
          <div class="form-block-zone black-box">
            <div class="form-group">
              <%= f.label :district, "旅遊地區" %>
              <%= f.text_field :district %>
            </div>
            <div class="form-group">
              <%= f.label :start_at, "*出發日期" %>
              <%= f.text_field :start_at, "data-provide" => 'datepicker', class: "datepicker" %>
            </div>
            <div class="form-group">
              <%= f.label :end_at, "*回程日期" %>
              <%= f.text_field :end_at, "data-provide" => 'datepicker', class: "datepicker" %>
            </div>
            <div class="form-group">
              <%= f.submit "新增", class: "btn btn-style btn-lg" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

