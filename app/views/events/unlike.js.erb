$('#event-id-<%= @event.id %>').html("<%= j( link_to (fa_icon "thumbs-o-up 2x"), like_event_path(@event),remote: true, method: :post, class: "btn btn-default") %>");
// 用Ajax 載入當前頁面，找到like數的 DOM 的新html 並替換
var selector = '#like';
$.get(location.href, function(html) {
  var doc = $(html).find(selector);
  $(selector).replaceWith(doc);
})