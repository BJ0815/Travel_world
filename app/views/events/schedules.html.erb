<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-12">
    <h1>填入住宿資訊</h1>
      <%= form_for ([@event, @schedule]) do |f| %>
      <% f.hidden_field :event_id, value: @event.id %>
        <div class="form-group">
          <%= f.label :stay, "第一天住宿" %>
          <%= f.text_field :stay, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :address, "地址" %>
          <%= f.text_area :address, class: "form-control" %>
        </div>
      </div>
        <div class="col-12 col-md-6">
        <div class="form-group">
          <%= f.label :check_in, "check in 時間" %>
          <%= f.text_field :check_in, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :check_out, "check out 時間" %>
          <%= f.text_field :check_out, class: "form-control" %>
        </div>
      </div>
      </div>
        <div class="form-group">
          <%= f.submit "新增", class: "btn btn-primary" %>
          <%= link_to "取消", new_event_path, class: "btn btn-default" %>
        </div>
      <% end %>
  </div>
</div>