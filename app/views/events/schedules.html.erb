<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-12">
    <h1 class="card-header">填入住宿資訊</h1>
      <%= form_for @schedule_first, :url => url_for(:controller => 'events', :action => 'schedulep'), method: "put" do |f| %>
        <div class="form-group">
          第<%= f.select :day, options_for_select([1]), class: "form-control" %>天
          <%= f.label :stay, "住宿" %>
          <%= f.text_field :stay, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :address, "地址" %>
          <%= f.text_area :address, class: "form-control" %>
        </div>
      </div>
      <div class="col-12 col-md-3">
        <div class="form-group">
          <%= f.label :check_in, "check in 時間" %>
          <%= f.time_field :check_in, class: "form-control" %>
        </div>
      </div>
      <div class="col-12 col-md-3">
        <div class="form-group">
          <%= f.label :check_out, "check out 時間" %>
          <%= f.time_field :check_out, class: "form-control" %>
        </div>
      </div>
      <% end %>
      <div class="col-12 col-md-12">
      <%= form_for @schedule_second, :url => url_for(:controller => 'events', :action => 'schedulep'), method: "put" do |f| %>
        <div class="form-group">
          第<%= f.select :day, options_for_select([2]), class: "form-control" %>天
          <%= f.label :stay, "住宿" %>
          <%= f.text_field :stay, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :address, "地址" %>
          <%= f.text_area :address, class: "form-control" %>
        </div>
      </div>
      <div class="col-12 col-md-3">
        <div class="form-group">
          <%= f.label :check_in, "check in 時間" %>
          <%= f.time_field :check_in, class: "form-control" %>
        </div>
      </div>
      <div class="col-12 col-md-3">
        <div class="form-group">
          <%= f.label :check_out, "check out 時間" %>
          <%= f.time_field :check_out, class: "form-control" %>
        </div>
      </div>
      <div class="col-12 col-md-12">
        <div class="form-group">
          <%= f.submit "加入住宿資訊", class: "btn btn-primary btn-lg btn-block" %>
          <%= link_to "略過直接搜尋景點", search_event_schedules_path(@event), class: "btn btn-default btn-lg btn-block" %>
        </div>
      </div>
      <% end %>
  </div>
</div>
