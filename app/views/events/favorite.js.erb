$('#fav-<%= @event.id %>').html("<%= j ( link_to icon('fas', 'heart', '從我的最愛移除'),unfavorite_event_path(@event),remote: true, method: :post, class: "btn btn-outline-secondary btn-lg btn-block" ) %>");
// 用Ajax 載入當前頁面，找到like數的 DOM 的新html 並替換
var selector = '#favorite';
$.get(location.href, function(html) {
  var doc = $(html).find(selector);
  $(selector).replaceWith(doc);
})