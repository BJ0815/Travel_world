<section>
  <div class="container">
    <div class="row mt-5">
      <div class="col-md-8">
        <div class="event-list-result">
          <% if @events.blank? %>
            <h4>There are no events containing the term <%= params[:search] %>。</h4>
          <% else %>
            <h4 class="d-inline"><em class="text-info"><%= params[:search] %></em> /</h4>
            <h4 class="d-inline"><em class="text-info"><%= @events.total_count %> </em>項行程</h4>
            <hr>
            <div class="btn-group">
              <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Sort_by
              </button>
              <div class="dropdown-menu">
                <%= link_to "按照收藏數多寡", search_events_path(order: :favorites_count), class: "dropdown-item" %>
                <%= link_to "按照評論多寡", search_events_path(order: :replies_count), class: "dropdown-item" %>
              </div>
            </div>
            <%= render partial: "shared/events", collection: @events, as: :object %>
          <% end %>
        </div>
        <div>
          <%= paginate @events %>
        </div>
      </div>
      <div class="col-md-4">
        <h5>精選行程</h5>
        <% @populars.each do |event|%>
            <%= link_to event_path(event) do %>
            <div class="box-shadow" style="width: 14rem;">
              <div class="spot-item">
                <figure class="mb-0">
                  <%#= image_tag spot_img(event).image , class: "figure-img img-fluid rounded" unless spot_img(event).nil? %>
  <%= image_tag "https://images.unsplash.com/photo-1522199710521-72d69614c702?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=272dda12b7480a098e1320036ac49966&auto=format&fit=crop&w=1952&q=80", class: "figure-img rounded", style: "width: 100%;" %>
                </figure>
                <div class="middle">
                  <h4><%= event.title %></h4>
                </div>
              </div>
            </div>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>
