<section>
  <div class="container">
    <div class="row mt-5">
      <div class="col-md-4">
        <h4>篩選出發日期</h4>
        <div class="input-group date">
            <input type="text" class="form-control" data-provide="datepicker">
        </div>
      </div>
      <div class="col-md-8">
        <% if @events.blank? %>
          <h4>There are no events containing the term <%= params[:query] %>。</h4>
        <% else %>
          <h4><%= @events.total_count %>項行程</h4>
          <%= render partial: "shared/events", collection: @events, as: :f %>
        <% end %>
        <div>
          <%= paginate @events %>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  $('input').datepicker({
    format: "yyyy/mm/dd",
    autoclose: true,
    todayHighlight: true
  });
</script>