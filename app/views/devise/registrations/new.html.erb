<div class="bg-img">
  <!--modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="devise-frame">  
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-4 p-2">
        <div id="sign-up-block">
          <div class="sign-in-title text-center">
            <h4>會員註冊</h4>
          </div>
          <div class="devise-zone black-box">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-group">
                <%= f.label :name, "名稱" %><br />
                <%= f.text_field :name, autofocus: true %>
              </div>
                男<%= f.radio_button :gender, "male" %>
                女<%= f.radio_button :gender, "female" %>
              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autocomplete: "email" %>
              </div>
              <div class="form-group">
                <%= f.label :password, "密碼" %><br />
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %><br />
                <% if @minimum_password_length %>
                  <em>(至少<%= @minimum_password_length %>位數字或英文)</em>
                <% end %><br />
              </div>
              <div class="form-group">
                <%= f.label :password_confirmation, "密碼確認" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
              </div>
                <%= f.submit "註冊", class: "btn btn-style w-100" %>
            <% end %>
            <br />
            <hr color="white">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

</div>

<script type="text/javascript">

  $(document).ready(function (){
      $('#loginModal').modal();
  });

</script>