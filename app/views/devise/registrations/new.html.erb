<div class="container devise-frame">  
  <div class="card text-white bg-info mb-3 text-center row col col-md-6 offset-md-3 col-sm row align-items-center justify-content-end">
    <div class="card-header">
      <h2>會員註冊</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :name, "名稱" %><br />
          <%= f.text_field :name, autofocus: true %>
        </div>
          男<%= f.radio_button :gender, "male" %>
          女<%= f.radio_button :gender, "female" %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email" %>
        </div>
        <div class="form-group">
          <%= f.label :password, "密碼" %><br />
          <%= f.password_field :password, autocomplete: "off" %><br />
          <% if @minimum_password_length %>
            <em>(至少<%= @minimum_password_length %>位數字或英文)</em>
          <% end %><br />
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, "密碼確認" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
          <%= f.submit "註冊", class: "btn btn-primary btn-lg active" %>
      <% end %>
      <br />
      <hr color="white">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>