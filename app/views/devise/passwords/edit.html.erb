<div class="container devise-frame">
  <div class="card text-white bg-info text-center col-md-6 offset-md-3 justify-content-end">
    <div class="card-header">
      <h2><%= t('.change_your_password') %></h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group">
        <%= f.label :password, t('.new_password') %><br/>
        <%= f.password_field :password, autofocus: true, autocomplete: "off" %><br/>
        <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em><br/>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, t('.confirm_new_password') %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
      <div class="form-group">
        <%= f.submit t('.change_my_password'), class: "btn btn-primary btn-lg active" %>
      </div>
    <% end %>
    <hr color="white">
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
