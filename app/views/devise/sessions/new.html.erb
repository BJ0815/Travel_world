<div class="devise-frame bg-img">  
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-4 p-2">
        <div id="sign-in-block">
          <div class="sign-in-title text-center">
            <h4>會員登入</h4>
          </div>
          <div class="devise-zone  black-box">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
              <div class="form-group">
                <%= f.label :password %>
                <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "忘記密碼", new_password_path(resource_name), class: "float-right" %>
                <% end %>
                <br />
                <%= f.password_field :password, autocomplete: "off" %>
              </div>
              <% if devise_mapping.rememberable? -%>
                <div class="form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, "記住密碼" %>
                </div>
              <% end -%>
                <%= f.submit "登入", class: "btn btn-style w-100" %>
            <% end %>
            <br />
            <hr color="white">
              <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>