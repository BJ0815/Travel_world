<!DOCTYPE html>
<html>
  <head>
    <title>TravelWorld</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- google map api-->
     <script src="//maps.google.com/maps/api/js?v=3&key=AIzaSyDfS2CyxqkdnxC9-Tb5wIBtmqYmG84dc_8"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
<!--api include end-->
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to "Travel World", root_path, id: "logo" %>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <li><%= link_to '會員資料', user_path(current_user) %></li>
              <li><%= link_to('登出', destroy_user_session_path, method: :delete) %></li>
            <% else %>
              <li><%= link_to('會員註冊', new_user_registration_path) %></li>
              <li><%= link_to('會員登入', new_user_session_path) %></li>
            <% end %>
          </ul>

        </nav>
      </div>


    </nav>
    <div class="container">
      <div class="row">

        <!-- flash message 樣式 -->
        <% if flash[:notice] %>
        <div class="container">
          <div class="row">
            <div class="alert alert-success alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <%= notice %>
            </div>
          </div>
        </div>
        <% end %>

        <% if flash[:alert] %>
        <div class="container">
          <div class="row">
            <div class="alert alert-danger alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <%= alert %>
            </div>
          </div>
        </div>
        <% end %>

        <%= yield %>

      </div>
  </body>
</html>
