<section class="events-list-view my-4">
  <%= link_to event_path(object) do %>
  <div class="container">
    <div class="card">
      <div class="row">
        <div class="col-sm-5 col-lg-4">
          <%= image_tag "http://via.placeholder.com/200x200", class: "card-img-left img-fluid" %>
        </div>
        <div class="col-sm-7 col-lg-8">
          <div class="card-block p-2 text-dark">
            <div class="event-detail">
              <h4 class="d-inline p-2"><%= object.title %></h4>
              <p><em>org_user: <%= org_user_name(object) %></em></p>
              <p><small class="text-muted"><%= time_tag(object.created_at) %></small></p>
              <p class="card-text mr-auto"><%= object.info %></p>
              <div class="event-footer d-flex">
                <div class="event-rating">
                  評分: <%= object.arg_nums %>
                </div>
                <span class="px-2">|</span>
                <div class="event-favorites">
                  <%= object.favorites_count %>人已收藏
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</section>
