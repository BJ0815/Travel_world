<div class="container">
  <div class="row">
      <div class="card">
        <div class="card-body">
          <h2><%= @user.name %></h2>
          <%= image_tag @user.avatar, class: "user-avatar img-thumbnail" %>
          <h6 class="card-subtitle mb-2 text-muted"><%= @user.email %></h6>
          <%= @user.gender %><br/>
          <p class="card-text">自我介紹<%= @user.introduction %></p>
          <% if @user.email == current_user.email %>
            <%= link_to '更新個人資料', edit_user_path(@user), class: "btn btn-primary" %>
            <%= link_to '修改密碼', edit_user_registration_path(@user), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
      <h4>收藏了<%= @favorited_events.count %>個行程!</h4>
    </div>
</div>