<div class="container">
  <div class="row justify-content-center">
    <%= form_for @user do |f| %>
      <div class="col-12 col-md-12">
        <div class="form-group">
          <%= image_tag ( @user.avatar unless @user.avatar.blank? ), class: "user-avatar img-thumbnail" %>
          <%= f.file_field :avatar %>
        </div>
        <div class="form-group">
          男<%= f.radio_button :gender, "male" %>
          女<%= f.radio_button :gender, "female" %>
        </div>
      </div>
      <div class="col-12 col-md-12">
        <div class="form-group">
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_area :introduction, placeholder: "人生就是一場旅行！留下最棒的自我介紹吧！", class: "form-control", rows: "10" %>
        </div>
        <div class="form-group">
          <%= f.submit "更新個人資料", class: "btn btn-primary" %>
          <%= link_to "取消", user_path(@user), class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>