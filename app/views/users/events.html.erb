<section class="my_events">
  <div class="container">
    <div class="row d-block mt-5">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">我的行程</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="favorite-tab" data-toggle="tab" href="#favorite" role="tab" aria-controls="favorite" aria-selected="false">收藏的行程</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="like-tab" data-toggle="tab" href="#like" role="tab" aria-controls="like" aria-selected="false">評價的行程</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="copy-tab" data-toggle="tab" href="#copy" role="tab" aria-controls="copy" aria-selected="false">複製的行程</a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <%= render "shared/creator_events", events: @myevents %>
        </div>
        <div class="tab-pane fade" id="favorite" role="tabpanel" aria-labelledby="favorite-tab">
          <%= render "shared/events", events: @favorites %>
        </div>
        <div class="tab-pane fade" id="like" role="tabpanel" aria-labelledby="like-tab">
          <%= render "shared/events", events: @reply_events %>
        </div>
        <div class="tab-pane fade" id="copy" role="tabpanel" aria-labelledby="copy-tab">
          <%= render "shared/creator_events", events: @clones %>
        </div>
      </div>
    </div>
  </div>
</section>

